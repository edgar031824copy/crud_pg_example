<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
  </head>
  <body>
    <form action="/todos" method="post">
      <div class="mt-3 container">
        <div class="mb-3">
          <label for="addtodo" class="form-label">Add todo</label>
          <input
            type="text"
            class="form-control"
            id="addtodo"
            name="todo"
            required
          />
        </div>
        <div class="mb-3">
          <label for="date" class="form-label">Date</label>
          <input
            type="date"
            class="form-control"
            id="date"
            name="date"
            required
          />
        </div>
        <button type="submit" class="btn btn-warning">Submit</button>
      </div>
    </form>

    <div class="display-todos container my-3">
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% if (data.length) { %> <% data.forEach(item => { %>
        <div class="col">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <%= item.date.toISOString().split('T')[0] %>
              </h5>
              <p class="card-text"><%= item.todo %></p>
              <div class="d-flex g-6">
                <a href="/todos/delete/<%=item.id%>">
                  <button class="btn btn-danger m-1">
                    <span class="material-symbols-outlined"> Delete </span>
                  </button>
                </a>
                <a href="/todos/<%=item.id%>">
                  <button class="btn btn-primary m-1 ms-2">
                    <span class="material-symbols-outlined"> edit </span>
                  </button>
                </a>
              </div>
            </div>
          </div>
        </div>
        <% }); %> <% } %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
